<!DOCTYPE html>
<html
  lang={assigns[:locale] || "en"}
  dir={
    assigns[:dir] ||
      if(assigns[:locale] in Application.get_env(:corex, :rtl_locales, []),
        do: "rtl",
        else: "ltr"
      )
  }
  data-theme="neo"
  data-mode={assigns[:mode]}
>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />
    <.live_title default="E2e" suffix=" Â· Phoenix Framework">
      {assigns[:page_title]}
    </.live_title>
    <link phx-track-static rel="stylesheet" href={~p"/assets/css/app.css"} />
  <script type="importmap">
    {
      "imports": {
        "corex": "/corex/corex.mjs",
        "corex/accordion": "/corex/accordion.mjs",
        "corex/angle-slider": "/corex/angle-slider.mjs",
        "corex/avatar": "/corex/avatar.mjs",
        "corex/carousel": "/corex/carousel.mjs",
        "corex/checkbox": "/corex/checkbox.mjs",
        "corex/clipboard": "/corex/clipboard.mjs",
        "corex/collapsible": "/corex/collapsible.mjs",
        "corex/combobox": "/corex/combobox.mjs",
        "corex/date-picker": "/corex/date-picker.mjs",
        "corex/dialog": "/corex/dialog.mjs",
        "corex/editable": "/corex/editable.mjs",
        "corex/floating-panel": "/corex/floating-panel.mjs",
        "corex/listbox": "/corex/listbox.mjs",
        "corex/menu": "/corex/menu.mjs",
        "corex/number-input": "/corex/number-input.mjs",
        "corex/password-input": "/corex/password-input.mjs",
        "corex/pin-input": "/corex/pin-input.mjs",
        "corex/radio-group": "/corex/radio-group.mjs",
        "corex/select": "/corex/select.mjs",
        "corex/signature-pad": "/corex/signature-pad.mjs",
        "corex/switch": "/corex/switch.mjs",
        "corex/tabs": "/corex/tabs.mjs",
        "corex/timer": "/corex/timer.mjs",
        "corex/toast": "/corex/toast.mjs",
        "corex/toggle-group": "/corex/toggle-group.mjs",
        "corex/tree-view": "/corex/tree-view.mjs"
      }
    }
  </script>

    <script defer phx-track-static type="module" src={~p"/assets/js/app.js"}>
    </script>
    <script>
      (() => {
        const getSystemMode = () =>
          window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light";

        const setMode = (mode) => {
          const resolved = mode === "dark" || mode === "light" ? mode : getSystemMode();
          localStorage.setItem("phx:mode", resolved);
          document.cookie = "phx_mode=" + resolved + "; path=/; max-age=31536000";
          document.documentElement.setAttribute("data-mode", resolved);
        };

        setMode(localStorage.getItem("phx:mode") || document.documentElement.getAttribute("data-mode") || getSystemMode());

        window.addEventListener("storage", (e) => e.key === "phx:mode" && e.newValue && setMode(e.newValue));

        window.addEventListener("phx:set-mode", (e) => {
          const value = e.detail?.value;
          const mode = Array.isArray(value) && value[0] ? value[0] : "light";
          setMode(mode);
        });
      })();
    </script>
  </head>
  <body class="typo layout">
    {@inner_content}
  </body>
</html>
