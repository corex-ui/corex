<Layouts.app flash={@flash} mode={@mode} locale={@locale} current_path={@current_path}>
  <div class="layout typo w-full px-ui-padding bg-root text-root--text">
    <h1>Corex E2E tests</h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 w-full max-w-6xl gap-ui-gap transition-shadow">
