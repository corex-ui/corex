        <h2 class="font-semibold text-lg m-0">Accordion</h2>
        <div class="flex flex-wrap gap-2">
          <.link navigate={~p"/#{@locale}/accordion"} class="link">Controller</.link>
          <.link navigate={~p"/#{@locale}/live/accordion"} class="link">Live</.link>
          <.link navigate={~p"/#{@locale}/playground/accordion"} class="link">Playground</.link>
          <.link navigate={~p"/#{@locale}/controlled/accordion"} class="link">Controlled</.link>
          <.link navigate={~p"/#{@locale}/async/accordion"} class="link">Async</.link>
        </div>
      </section>

      <section class="flex flex-col border border-layer--border rounded-ui p-ui-padding gap-ui-gap bg-layer text-layer--text transition-shadow hover:shadow-md">
        <h2 class="font-semibold text-lg m-0">Checkbox</h2>
        <div class="flex flex-wrap gap-2">
          <.link navigate={~p"/#{@locale}/checkbox"} class="link">Controller</.link>
          <.link navigate={~p"/#{@locale}/live/checkbox"} class="link">Live</.link>
